<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CNBlogs"
    xmlns:ControlHelper="using:CNBlogs.ControlHelper">

    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <x:String x:Key="ProgressBarIndeterminateForegroundThemeBrush">#FFa9d6f2</x:String>
            <SolidColorBrush x:Key="AppBarItemPointerOverBackgroundThemeBrush" Color="#21FFFFFF" />
            <SolidColorBrush x:Key="AppBarItemPointerOverForegroundThemeBrush" Color="#FFFFFFFF" />
            <SolidColorBrush x:Key="AppBarItemForegroundThemeBrush" Color="White"/>
            <!--<x:String x:Key="TextBlockLanguageProperty">zh-Hans</x:String>-->
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <Style x:Key="SimpleBloggerControl" TargetType="local:BloggerControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BloggerControl">
                    <Border Height="60" Width="Auto">
                        <StackPanel Orientation="Horizontal">
                            <Grid Height="60" Width="60">
                                <TextBlock Text="" FontFamily="Segoe UI Symbol" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{ThemeResource Win8CNBlogsThemeLightColor}"/>
                                <Rectangle StrokeThickness="1" Stroke="{ThemeResource Win8CNBlogsLineColor}" RadiusX="10" RadiusY="10" >
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="{Binding Avatar}"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                            <TextBlock Text="{Binding Name}" FontSize="24" Style="{StaticResource Win8PageSubTitleFont}" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="NewsTitleTextControl" TargetType="local:NewsControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:NewsControl">
                    <Grid Width="600" Height="240" x:Name="FirstViewGrid"
                          Margin="20,10"
                          Background="{ThemeResource Win8CNBlogsThemeColor}"            
                          IsRightTapEnabled="False" IsHoldingEnabled="False" IsDoubleTapEnabled="False">
                        <Grid.Clip>
                            <RectangleGeometry Rect="0,0,600,240"/>
                        </Grid.Clip>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="2*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>

                            <Storyboard x:Name="sb_Button_in">
                                <DoubleAnimation Storyboard.TargetName="panelTrans"
                                Storyboard.TargetProperty="X"
                                BeginTime="0:0:0"
                                 Duration="0:0:0.5" To="0" >
                                    <DoubleAnimation.EasingFunction>
                                        <ExponentialEase  EasingMode="EaseIn"  />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                            
                            <Storyboard x:Name="sb_Button_out">
                                <DoubleAnimation Storyboard.TargetName="panelTrans" 
                                Storyboard.TargetProperty="X"
                                BeginTime="0:0:0"
                                Duration="0:0:0.5" To="500" >
                                    <DoubleAnimation.EasingFunction>
                                        <ExponentialEase  EasingMode="EaseOut"  />
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>


                        </Grid.Resources>

                        <TextBlock Grid.ColumnSpan="2" Margin="45,40,45,30"
                                   Text="{Binding Title}" 
                                   Style="{StaticResource Win8PostTitleFont}" 
                                   Foreground="{ThemeResource Win8CNBlogsBackColor}"
                                   TextWrapping="Wrap" MaxLines="3"/>
                        <Rectangle Grid.ColumnSpan="2" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                       Margin="45,0,45,10"
                       Width="410" Height="1"  Fill="{ThemeResource Win8CNBlogsThemeWhiteColor}" />
                        <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                       Margin="0,0,45,0"
                       Style="{StaticResource Win8PostAbstractionFont}" FontSize="18" Foreground="{ThemeResource Win8CNBlogsThemeLightColor}"
                       >
                                <Run x:Uid="NewsPostSource" Text=" 来自:"/>
                                <Run Text="{Binding SourceName}"/>
                        </TextBlock>
                        <TextBlock Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"
                       Margin="0,0,45,0"                       
                       Style="{StaticResource Win8PostAbstractionFont}" FontSize="18" Foreground="{ThemeResource Win8CNBlogsThemeLightColor}"
                       Text="{Binding PublishTime, Converter={StaticResource TimeCountDownConverter}}"/>
                        <Grid Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="5" 
                              Width="600" Height="240" 
                              x:Name="SecondViewGrid"
                              Background="AliceBlue">
                            <Grid.RenderTransform>
                                <TranslateTransform x:Name="panelTrans" X="500"></TranslateTransform>
                            </Grid.RenderTransform>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"  x:Name="NaviButton"
                                    Width="106" Height="246" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Background="{ThemeResource Win8CNBlogsLineColor}"
                                    HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                                    Content="&#xE09E;" Foreground="{ThemeResource Win8CNBlogsThemeWhiteColor}" 
                                    FontFamily="Segoe UI Symbol" FontSize="72" FontWeight="ExtraBlack" BorderThickness="1" BorderBrush="{ThemeResource Win8CNBlogsThemeColor}">
                            </Button>
                            <Grid Grid.Column="1" Grid.ColumnSpan="2" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Margin="45,30,45,10"
                                           Text="{Binding Title}"
                                           Style="{StaticResource Win8HighlightInformationFont}"
                                           FontSize="18"
                                           TextWrapping="Wrap" MaxLines="2"/>
                                <Rectangle Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                           Margin="45,0,45,0"
                                           Width="410" Height="1"  Fill="{ThemeResource Win8CNBlogsThemeLightColor}" />
                                <TextBlock Grid.Row="2" Margin="45,10,45,30"
                                           Text="{Binding Summary}"
                                           Style="{StaticResource Win8PostAbstractionFont}"
                                           FontSize="18"
                                           TextWrapping="Wrap" MaxLines="6"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

